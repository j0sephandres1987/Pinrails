<%= form_for comment, :url => {:controller => "comments", :action => "create_comment", :post_id => post.id}, :data => {:remote => true, :validation => true}, :builder => Judge::FormBuilder do |f| %>
  <%= f.label :comment, "Comment here" %>
  <%= f.text_field :comment, :validate => true, :validation => "true" %>
  <%= submit_tag "Create comment", :class => "button tiny" %>
<% end %>